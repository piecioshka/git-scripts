#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$script_dir/__shared.sh"

repo=$(git config remote.origin.url)

if [ -n "${repo}" ]; then
  __print_action "Copying origin URL: ${repo}"
fi

__print_command "rm -rf .git/"
rm -rf .git/

__print_command "git setup (group of commands)"
git setup

if [ -n "$repo" ]; then
  __print_command "git config remote.origin.url ${repo}\n"
  git config remote.origin.url ${repo}
fi
