#!/usr/bin/env bash

source __shared.sh

message=$1
usage='Usage: git fire "MESSAGE"'

if [ -z "$message" ]; then
  echo "$usage"
  exit 1
fi

printCommand "git status -s"
git status -s

printCommand "git add . -v"
git add .

printCommand "git commit -am \"$message\""
git commit -am "$message"

printCommand "git push"
git push
